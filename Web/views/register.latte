<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/player/css/player.css">
    <link rel="shortcut icon" href="/static/images/icon.png" type="image/png">
    <link rel="stylesheet" href="/static/node_modules/boxicons/css/boxicons.min.css">
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/static/images/icons/icon-512x512.png" />
    <meta name="apple-mobile-web-app-status-bar" content="#13b522" />
    <meta name="theme-color" content="#13b522" />
    <title>Жабблер</title>
</head>
<body>
    <div id="app">
        <div class="popup popup_do_not_close" id="JS_Loader">
            <div class="loader loader_cpa"><div class="loader_part loader_part_1"></div><div class="loader_part loader_part_2"></div><div class="loader_part loader_part_3"></div></div>
        </div>
        {include 'includes/navbar_top.latte'}
        <div class="container">
            {include 'includes/navbar.latte'}
            <main class="main login_main">
                <div>
                    {if $opened == 1}
                    <div class="logotype_font">
                        {$language['zhabbler']}
                    </div>
                    <form method="post" data-reload="2" data-location="/dashboard" action="/api/Account/register">
                        <div class="input_place">
                            <input autocomplete="off" type="text" placeholder="{$language['name']}" name="name" class="input">
                        </div>
                        <div class="input_place">
                            <input autocomplete="off" type="text" placeholder="{$language['nickname']}" name="nickname" class="input">
                        </div>
                        <div class="input_place">
                            <input autocomplete="off" type="email" placeholder="{$language['email']}" name="email" class="input">
                        </div>
                        <div class="input_place">
                            <input autocomplete="off" type="password" placeholder="{$language['password']}" name="password" class="input">
                        </div>
                        <div class="input_place">
                            <button class="button" type="submit">
                                {$language['register']}
                            </button>
                        </div>
                        <div class="input_place">
                            <span>
                                {$language['have_you_been_here_before']} <a href="/login">{$language['login']}.</a>
                            </span>
                        </div>
                    </form>
                    {else}
                    <span>{$language['register_closed_info']|noescape}</span>
                    {/if}
                </div>
            </main>
            {include 'includes/nav_options.latte'}
        </div>
        <preloader src="/static/player/js/zhabblerplayer.js"></preloader>
        <preloader src="/static/js/random_backgrounds.js"></preloader>
    </div>
    <script src="/static/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="/static/node_modules/jquery-ui/dist/jquery-ui.min.js"></script>
    <script src="/static/js/main.js"></script>
</body>
</html>